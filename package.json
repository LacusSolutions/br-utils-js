{
  "name": "monorepo",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "prepare": "bun x husky",
    "commit": "git-cz",
    "changelog": "changeset",
    "version": "changeset version",
    "release": "changeset publish",
    "type-check": "bun run build && bun run type-check:ci",
    "type-check:ci": "bun run --filter '*' type-check",
    "type-check:cnpj": "bun run --filter './***/cnpj-*' type-check",
    "type-check:cnpj-fmt": "bun run --filter './***/cnpj-fmt' type-check",
    "type-check:cnpj-gen": "bun run --filter './***/cnpj-gen' type-check",
    "type-check:cnpj-val": "bun run --filter './***/cnpj-val' type-check",
    "type-check:cnpj-utils": "bun run --filter './**/cnpj-utils' type-check",
    "type-check:cpf": "bun run --filter './***/cpf-*' type-check",
    "type-check:cpf-fmt": "bun run --filter './***/cpf-fmt' type-check",
    "type-check:cpf-gen": "bun run --filter './***/cpf-gen' type-check",
    "type-check:cpf-val": "bun run --filter './***/cpf-val' type-check",
    "type-check:cpf-utils": "bun run --filter './**/cpf-utils' type-check",
    "lint": "bun run lint:root && bun run --filter '*' lint",
    "lint:root": "eslint --fix eslint.config.mjs rollup.config.mjs",
    "lint:cnpj": "bun run --filter './***/cnpj-*' lint",
    "lint:cnpj-fmt": "bun run --filter './***/cnpj-fmt' lint",
    "lint:cnpj-gen": "bun run --filter './***/cnpj-gen' lint",
    "lint:cnpj-val": "bun run --filter './***/cnpj-val' lint",
    "lint:cnpj-utils": "bun run --filter './**/cnpj-utils' lint",
    "lint:cpf": "bun run --filter './***/cpf-*' lint",
    "lint:cpf-fmt": "bun run --filter './***/cpf-fmt' lint",
    "lint:cpf-gen": "bun run --filter './***/cpf-gen' lint",
    "lint:cpf-val": "bun run --filter './***/cpf-val' lint",
    "lint:cpf-utils": "bun run --filter './**/cpf-utils' lint",
    "build": "bun run build:cnpj && bun run build:cpf",
    "build:cnpj": "bun run build:cnpj-fmt && bun run build:cnpj-gen && bun run build:cnpj-val && bun run build:cnpj-utils",
    "build:cnpj-fmt": "bun run --filter './***/cnpj-fmt' build",
    "build:cnpj-gen": "bun run --filter './***/cnpj-gen' build",
    "build:cnpj-val": "bun run --filter './***/cnpj-val' build",
    "build:cnpj-utils": "bun run --filter './**/cnpj-utils' build",
    "build:cpf": "bun run build:cpf-fmt && bun run build:cpf-gen && bun run build:cpf-val && bun run build:cpf-utils",
    "build:cpf-fmt": "bun run --filter './***/cpf-fmt' build",
    "build:cpf-gen": "bun run --filter './***/cpf-gen' build",
    "build:cpf-val": "bun run --filter './***/cpf-val' build",
    "build:cpf-utils": "bun run --filter './**/cpf-utils' build",
    "test": "bun run test:cnpj && bun run test:cpf",
    "test:ci": "bun run --filter '*' test:ci",
    "test:cnpj": "bun run test:cnpj-fmt && bun run test:cnpj-gen && bun run test:cnpj-val && bun run test:cnpj-utils",
    "test:cnpj-fmt": "bun run --filter './***/cnpj-fmt' test",
    "test:cnpj-gen": "bun run --filter './***/cnpj-gen' test",
    "test:cnpj-val": "bun run --filter './***/cnpj-val' test",
    "test:cnpj-utils": "bun run --filter './**/cnpj-utils' test",
    "test:cpf": "bun run test:cpf-fmt && bun run test:cpf-gen && bun run test:cpf-val && bun run test:cpf-utils",
    "test:cpf-fmt": "bun run --filter './***/cpf-fmt' test",
    "test:cpf-gen": "bun run --filter './***/cpf-gen' test",
    "test:cpf-val": "bun run --filter './***/cpf-val' test",
    "test:cpf-utils": "bun run --filter './**/cpf-utils' test"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.6",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.34.0",
    "eslint-config-any": "^2.1.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2"
  }
}
