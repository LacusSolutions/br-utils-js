{
  "name": "monorepo",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "prepare": "husky",
    "commit": "git-cz",
    "changelog": "changeset",
    "version": "changeset version",
    "release": "changeset publish",
    "lint": "bun run lint:root && bun run lint:fmt && bun run lint:gen && bun run lint:val && bun run lint:utils",
    "lint:root": "eslint --fix eslint.config.mjs rollup.config.mjs",
    "lint:fmt": "cd packages/cnpj-fmt && bun run lint",
    "lint:gen": "cd packages/cnpj-gen && bun run lint",
    "lint:val": "cd packages/cnpj-val && bun run lint",
    "lint:utils": "cd packages/cnpj-utils && bun run lint",
    "test": "bun run test:fmt && bun run test:gen && bun run test:val",
    "test:fmt": "cd packages/cnpj-fmt && bun run test",
    "test:gen": "cd packages/cnpj-gen && bun run test",
    "test:val": "cd packages/cnpj-val && bun run test"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.2",
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.23.0",
    "eslint-config-any": "^1.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.0",
    "prettier": "^3.5.3",
    "typescript": "^5.8.2"
  }
}
